<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PennyPinch" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/backgroundColorPrimary</item>
        <item name="android:colorBackground">@color/backgroundColorPrimary</item>
        <item name="colorSurface">@color/backgroundColorPrimary</item>
        <item name="android:divider">@color/dividerColor</item>
        <item name="colorOnError">@color/errorColor</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Button style for Material Buttons -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/backgroundColorPrimary</item>
        <item name="backgroundTint">@color/buttonColorPrimary</item>
    </style>
</resources>
